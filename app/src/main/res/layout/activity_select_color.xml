<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/select_color_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:picker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectColor">

    <android.support.v7.widget.Toolbar
        android:id="@+id/select_color_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <com.github.danielnilsson9.colorpickerview.view.ColorPickerView
        android:id="@+id/colorPicker"
        picker:alphaChannelVisible="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/select_color_toolbar"
        android:layout_above="@+id/button_change_color_accept"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button_change_color_accept"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
