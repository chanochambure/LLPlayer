<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
    <ImageView
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:id="@+id/albumImage"
        android:padding="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="" />

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/albumImage"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:textSize="13sp"
        android:paddingTop="1dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="1dp"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/music_text"
        android:textSize="10sp"
        android:paddingTop="0dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="0dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/main_text"
        android:singleLine="true"
        android:layout_toRightOf="@+id/albumImage"/>

    <TextView
        android:singleLine="true"
        android:id="@+id/secondary_text"
        android:textSize="10sp"
        android:paddingTop="1dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/music_text"
        android:layout_toRightOf="@+id/albumImage"
        android:layout_toEndOf="@+id/albumImage"
        android:layout_alignBottom="@+id/albumImage"/>

    <ImageButton
        android:layout_width="67dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:id="@+id/imageButton"
        android:layout_below="@+id/albumImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/secondary_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:id="@+id/imageButton3"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_below="@+id/secondary_text"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:id="@+id/imageButton4"
        android:layout_below="@+id/secondary_text"
        android:layout_toLeftOf="@+id/imageButton3"
        android:layout_toStartOf="@+id/imageButton3"/>
</RelativeLayout>